<resources>    <!-- Base application theme. -->    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">        <item name="android:windowTitleStyle">@style/WindowTitleBackground</item>        <item name="colorAccent">#FFFFFF</item>    </style>    <style name="WindowTitleBackground">        <item name="android:background">#FAFAFA</item>    </style>    <style name="dialog" parent="@android:style/Theme.Dialog">        <item name="android:windowFrame">@null</item>        <item name="android:windowNoTitle">true</item>        <item name="android:windowBackground">@android:color/white</item>        <item name="android:windowIsFloating">true</item>        <item name="android:windowContentOverlay">@null</item>    </style></resources>