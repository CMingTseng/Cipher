<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:id="@+id/text_relative">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#EEEEEE"        android:layout_marginTop="7dp"        android:layout_marginBottom="7dp"        android:paddingLeft="10dp"        android:paddingRight="10dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textAppearance="?android:attr/textAppearanceLarge"            android:text="@string/texttopw"            android:id="@+id/text_hint"            android:layout_weight="1"            android:textColor="#111111"            android:layout_above="@+id/text_input"            android:layout_alignParentLeft="true"            android:layout_alignParentStart="true"            android:paddingTop="3dp"            android:paddingRight="5dp"            android:paddingBottom="3dp"            android:layout_marginBottom="5dp" />        <EditText                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:id="@+id/text_input"                android:layout_centerVertical="true"                android:layout_alignParentRight="true"                android:layout_alignParentEnd="true"                android:layout_alignParentLeft="true"                android:layout_alignParentStart="true"                android:textColor="#333333"                android:password="true"                android:textColorHint="#4c4c4c"                android:textColorHighlight="#4c4c4c"                android:textColorLink="#4c4c4c"            android:background="@drawable/abc_cab_background_top_mtrl_alpha"            android:paddingTop="5dp"            android:paddingBottom="5dp"            android:textSize="17dp"            android:textAppearance="?android:attr/textAppearanceLarge"            android:singleLine="true" />    </RelativeLayout></RelativeLayout>