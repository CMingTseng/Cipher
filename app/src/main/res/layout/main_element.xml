<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    xmlns:shadow="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="lamen.cipher.MainActivity"    android:background="#FAFAFA">    <ImageView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:id="@+id/element_bg_imageview"        android:background="@drawable/rectangle"        android:scaleType="centerCrop" />    <FrameLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#88333333"        android:visibility="visible"        android:id="@+id/element_bg_hover_frame"></FrameLayout>    <FrameLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:layout_centerHorizontal="true"        android:id="@+id/element_type_devider_frame"></FrameLayout>    <ImageView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/element_type_imageview"        android:layout_above="@+id/element_type_devider_frame"        android:layout_centerHorizontal="true" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textAppearance="?android:attr/textAppearanceSmall"        android:id="@+id/element_type_textview"        android:layout_below="@+id/element_type_imageview"        android:layout_centerHorizontal="true"        android:background="@drawable/rectangle"        android:textColor="#FFFFFF"        android:padding="5dp"        android:layout_marginTop="10dp" /></RelativeLayout>